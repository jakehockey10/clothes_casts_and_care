<% provide(:title, 'Post') %>

<div class="row">
  <div class="box">
    <div class="col-lg-12">

      <h2 class="text-center">
        <%= @post.title %>
        <br>
        <small><%= @post.admin.name %></small>
      </h2>

      <p>
        <%= @post.content.html_safe %>
      </p>

      <%= link_to 'Edit', edit_post_path(@post) if admin_signed_in? %>

    </div>
  </div>
</div>
